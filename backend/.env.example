NODE_ENV=development
PORT=5000
HOST=0.0.0.0

# JWT Configuration
JWT_SECRET=magi-super-secret-key-change-in-production
JWT_EXPIRES_IN=24h

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Authentication
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=900000

# Monitoring
METRICS_INTERVAL=5000
HEALTH_CHECK_TIMEOUT=10000

# SSH Configuration
SSH_TIMEOUT=30000
SSH_MAX_CONNECTIONS=10

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/magi.log
