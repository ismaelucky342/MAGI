{
  "name": "magi-node-agent",
  "version": "1.0.0",
  "description": "MAGI Node Agent - Cross-platform monitoring agent",
  "main": "src/agent.js",
  "scripts": {
    "start": "node src/agent.js",
    "dev": "nodemon src/agent.js",
    "build": "pkg . --out-path ./dist",
    "install-service": "node src/install-service.js",
    "uninstall-service": "node src/uninstall-service.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "systeminformation": "^5.21.20",
    "node-cron": "^3.0.3",
    "ws": "^8.14.2",
    "os": "^0.1.2",
    "path": "^0.12.7",
    "fs": "^0.0.1-security"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "pkg": "^5.8.1"
  },
  "pkg": {
    "scripts": [
      "src/**/*.js"
    ],
    "assets": [
      "public/**/*"
    ],
    "targets": [
      "node18-win-x64",
      "node18-linux-x64",
      "node18-macos-x64"
    ]
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "monitoring",
    "system",
    "cross-platform",
    "magi"
  ],
  "author": "MAGI Team",
  "license": "MIT"
}
