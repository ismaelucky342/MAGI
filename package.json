{
  "name": "magi-monitoring-system",
  "version": "1.0.0",
  "description": "MAGI - Distributed monitoring system for Gaspar, Melchor, and Baltasar nodes",
  "main": "index.js",
  "scripts": {
    "menu": "./scripts/magi-menu.sh",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "start": "cd backend && npm start",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "setup": "npm run setup:backend && npm run setup:frontend",
    "setup:backend": "cd backend && npm install",
    "setup:frontend": "cd frontend && npm install",
    "deploy": "./scripts/deploy-interactive.sh",
    "status": "./scripts/check-status.sh",
    "test": "cd backend && npm test && cd ../frontend && npm test"
  },
  "keywords": ["monitoring", "dashboard", "ssh", "metrics", "nodes"],
  "author": "MAGI System",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
